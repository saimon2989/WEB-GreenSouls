{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign image_ratio = section.settings.image_ratio
  assign image_desktop = section.settings.image_desktop
  assign image_mobile = section.settings.image_mobile
-%}

{% style %}
  .banner {
    position: relative;
    width: 100%;
  }
  .banner__overlay {
    background-color: rgba(var(--color-overlay), {{ section.settings.opacity_overlay }});
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .banner img {
    width: 100%;
    height: auto;
  }
  .banner__content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
  }
  @media (max-width: 768px) {
    .banner img.desktop {
      display: none;
    }
  }
  @media (min-width: 769px) {
    .banner img.mobile {
      display: none;
    }
  }
{% endstyle %}

<div class="banner">
  <img class="desktop" src="{{ image_desktop | img_url: '1920x' }}" alt="{{ image_desktop.alt | escape }}">
  <img class="mobile" src="{{ image_mobile | img_url: '750x' }}" alt="{{ image_mobile.alt | escape }}">
  <div class="banner__overlay"></div>
  <div class="banner__content">
    {%- if section.settings.heading != blank -%}
      <h2>{{ section.settings.heading }}</h2>
    {%- endif -%}
    {%- if section.settings.text_information != blank -%}
      <p>{{ section.settings.text_information }}</p>
    {%- endif -%}
    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="button">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Responsive Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "text_information",
      "label": "Text Information"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "opacity_overlay",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay Opacity",
      "default": 0.5
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Responsive Image Banner"
    }
  ]
}
{% endschema %}
