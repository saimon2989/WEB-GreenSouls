
{{ 'cb__custom-styles.css' | asset_url | stylesheet_tag }}
{{ 'cb__overlay-section.css' | asset_url | stylesheet_tag }}

{% style %}
    .cb__siembra-corales-container {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-id-{{ section.id }} .cb__title-text {
        color: {{ section.settings.titulo_color }};
    }

    .section-id-{{ section.id }} .contenido {
        background: {{ section.settings.background_container }};
    }
{% endstyle %}

<div class="cb__container cb__siembra-corales-container section-id-{{ section.id }}">
<div class="contenedor-child">
  <div class="contenido">
    <h1 class="cb__title-text">{{ section.settings.titulo }}</h1>

    <div {% if section.settings.button_label_1 == blank and section.settings.button_label_2 == blank %}style="margin-top: 0;"{% endif %} class="cb__button-container {% if section.settings.block_buttons %}cb__block-buttons{% endif %}">
        <a class="cb__primary-button" href="{{ section.settings.button_link_1 }}">{{ section.settings.button_label_1 }}</a>
        <a class="cb__primary-button" href="{{ section.settings.button_link_2 }}">{{ section.settings.button_label_2 }}</a>
    </div>
  </div>
  <div class="imagen">
    {% if section.settings.image == blank %}
        {{ 'image' | placeholder_svg_tag }}
    {% else %}
        <img src="{{ section.settings.image | image_url }}" />
    {% endif %}
  </div>
</div>
</div>

{% schema %}
    {
      "name": "Overlay by Codebulls",
      "tag": "section",
            "settings": [
            {
                "type": "header",
                "content": "Section options"
            },
            {
                    "type": "range",
                    "id": "padding_top",
                    "min": 0,
                    "max": 200,
                    "step": 10,
                    "default": 60,
                    "unit": "px",
                    "label": "t:sections.all.section-padding.padding_top.label"
                },
                {
                    "type": "range",
                    "id": "padding_bottom",
                    "min": 0,
                    "max": 200,
                    "step": 10,
                    "default": 60,
                    "unit": "px",
                    "label": "t:sections.all.section-padding.padding_bottom.label"
                },
                {
                    "type": "header",
                    "content": "Container options"
                },
                {
                    "type": "color_background",
                    "id": "background_container",
                    "label": "Background",
                    "default": "linear-gradient(#000000c5, #000000c5)"
                    },
                {
                    "type": "header",
                    "content": "Text options"
                },
                {
                    "type": "text",
                    "id": "titulo",
                    "default": "Siembra corales, siembra pulmones para nuestro planeta",
                    "label": "Title"
                },
                {
                    "type": "color",
                    "id": "titulo_color",
                    "label": "Title color",
                    "default": "#FFF"
                },
                {
                    "type": "header",
                    "content": "Image options"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "header",
                    "content": "Button options"
                },
                {
                    "type": "checkbox",
                    "default": false,
                    "id": "block_buttons",
                    "label": "Block buttons"
                },
                {
                    "type": "text",
                    "id": "button_label_1",
                    "default": "Pasa a la acci√≥n",
                    "label": "t:sections.all.button.button_text.label"
                },
                {
                    "type": "url",
                    "id": "button_link_1",
                    "label": "t:sections.all.button.button_link.label"
                },
                {
                    "type": "text",
                    "id": "button_label_2",
                    "default": "Aparta tu cupo",
                    "label": "t:sections.all.button.button_text.label"
                },
                {
                    "type": "url",
                    "id": "button_link_2",
                    "label": "t:sections.all.button.button_link.label"
                }
            ],
      "presets": [
        {   
          "name": "Overlay Section by Codebulls"
        }
      ]
    }
    {% endschema %}