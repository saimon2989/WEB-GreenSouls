				}
			]
		}
	],
	"presets": [
		{
			"name": "t:sections.image-tabs.name",
			"blocks": [
				{
					"type": "image-tabs_item"
				},
				{
					"type": "image-tabs_item"
				},
				{
					"type": "image-tabs_item"
				}
			]
		}
	]
}
{% endschema %}
