{{ 'cb__custom-styles.css' | asset_url | stylesheet_tag }}

{% style %}
    .cb__container.cb__navigation-section {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
{% endstyle %}

    <div class="cb__container cb__navigation-section">
      <div class="cb__navigation-container">
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'column' %}
                    <div class="cb__navigation-item">
                        <a class="cb__navigation-link" href="{{ block.settings.link }}">
                            {% if block.settings.image == blank %}
                                {{ 'image' | placeholder_svg_tag }}
                            {% else %}
                            {%- assign image_width = block.settings.image_width
                                | append: 'x'
                            -%}
                            <img
                                srcset="{{ block.settings.image | img_url: image_width }} 1x, {{ block.settings.image | img_url: image_width, scale: 2 }} 2x"
                                src="{{ block.settings.image | img_url: image_width }}"
                                width="{{ block.settings.image_width }}"
                                height="{{ block.settings.image.height }}"
                                alt="{{ block.settings.image.alt | default: shop.name | escape }}"
                                loading="lazy"
                            >         
                            {% endif %}
                            <p class="cb__navigation-text">{{ block.settings.text_link }}</p>
                        </a>
                    </div>
            {% endcase %}
        {% endfor %}
      </div>
    </div>

{% schema %}
{
	"name": "Navigation by Codebulls",
    "max_blocks": 6,
	"settings": [
		{
			"type": "header",
			"content": "t:sections.all.section-padding.header.content"
		},
		{
			"type": "range",
			"id": "padding_top",
			"min": 0,
			"max": 200,
			"step": 10,
			"default": 60,
			"unit": "px",
			"label": "t:sections.all.section-padding.padding_top.label"
		},
		{
			"type": "range",
			"id": "padding_bottom",
			"min": 0,
			"max": 200,
			"step": 10,
			"default": 60,
			"unit": "px",
			"label": "t:sections.all.section-padding.padding_bottom.label"
		}
	],
	"blocks": [
		{
			"type": "column",
			"name": "Column",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image"
				},
				{
					"type": "range",
					"id": "image_width",
					"min": 40,
					"max": 150,
					"step": 5,
					"unit": "px",
					"label": "Image width",
					"default": 150
				},
                {
                    "type": "text",
                    "id": "text_link",
                    "default": "Conoce m√°s",
                    "label": "Text link"
                },
				{
					"type": "url",
					"id": "link",
					"label": "Link"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Navigation by Codebulls",
			"blocks": [
				{
					"type": "column"
				},
				{
					"type": "column"
				},
				{
					"type": "column"
				},
				{
					"type": "column"
				},
				{
					"type": "column"
				},
				{
					"type": "column"
				}
			]
		}
	]
}
{% endschema %}
