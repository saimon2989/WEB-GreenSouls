{% style %}
    .cb__container.cb__container--{{ section.id }} {
        padding-inline: 2rem;
        padding-block: 0;
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
    }

    .cb__container--{{ section.id }} .cb__content {
        display: grid;
        gap: 1em;
    }

    .cb__container--{{ section.id }} .cb__column {
        display: grid;
        gap: 2em;
    }

    .cb__container--{{ section.id }} .cb__image {
        border-radius: 30px;
        overflow: hidden;
    }

    .cb__container--{{ section.id }} .cb__image img {
        width: 100%;
    }

    .cb__container--{{ section.id }} .cb__image svg {
        width: 100%;
    }

    .cb__container--{{ section.id }} .cb__icon svg {
        width: 50px;
    }

    .cb__container--{{ section.id }} .cb__title {
        text-align: center;
        border-bottom: 1px solid;
        padding-bottom: 2em;
        margin-bottom: 1em;
    }

    .cb__container--{{ section.id }} .cb__button {
        margin: 0 auto;
    }

    .cb__container--{{ section.id }} .cb__primary-button {
        border: 1px solid #1fa0a2;
    }

    .cb__container--{{ section.id }} .cb__primary-button::before {
        background: #1fa0a2;
    }

    @media (min-width: 1023px){
        .cb__container.cb__container--{{ section.id }} {
            padding-inline: 4rem;
        }

        .cb__container--{{ section.id }} .cb__content {
            grid-template-columns: repeat(2, 1fr);
        }

        .cb__container--{{ section.id }} .cb__image img {
            height: 100%;
            object-fit: cover;
        }

        .cb__container--{{ section.id }} .cb__title {
            padding-bottom: 3em;
            margin-bottom: 2em;
            grid-column: span 2;
    }
}
    

{% endstyle %}

<div class="cb__container cb__container--{{ section.id }}">
    <div class="cb__content">
        <div class="cb__title">
            {{ section.settings.title }}
        </div>
        <div class="cb__column">
            <div class="cb__image">
              {% if section.settings.top_left_image == blank %}
                {{ 'image' | placeholder_svg_tag }}
              {% else %}
                <img src="{{ section.settings.top_left_image | image_url }}"
                >
              {% endif %}
            </div>
            
            <div class="cb__button">
                <a class="cb__primary-button" href="{{ section.settings.button_link_1 }}">{{ section.settings.button_label_1 }}</a>
            </div>
        </div>
        <div class="cb__column">
            <div class="cb__image">
                {% if section.settings.top_right_image == blank %}
                  {{ 'image' | placeholder_svg_tag }}
                {% else %}
                  <img src="{{ section.settings.top_right_image | image_url }}"
                  >
                {% endif %}
            </div>
            <div class="cb__button">
                <a class="cb__primary-button" href="{{ section.settings.button_link_2 }}">{{ section.settings.button_label_2 }}</a>
            </div>
        </div>
    </div>
</div>

