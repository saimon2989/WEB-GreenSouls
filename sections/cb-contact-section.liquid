{{ 'cb__custom-styles.css' | asset_url | stylesheet_tag }}

{% style %}
  .section-id-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .section-id-{{ section.id }} .cb__background-color {
    background-color: {{ section.settings.background_color }};
  }

  .section-id-{{ section.id }} .cb__form-container-text p,
  .section-id-{{ section.id }} .cb__form-container-text p > * {
    word-wrap: anywhere;
  }

  .section-id-{{ section.id }} .cb__form-container-text p {
    margin-bottom: 1em;
  }

  .section-id-{{ section.id }} .cb__title-text {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: 900;
    margin-bottom: 1em;
  }

  .section-id-{{ section.id }} .cb__form-container-text p,
  .section-id-{{ section.id }} .cb__form-container-text p > * {
    color: {{ section.settings.paragraph }};
  }

  .section-id-{{ section.id }} .cb__container-child {
    display: grid;
    grid-template-columns: 1fr 1fr;
    border-radius: 30px;
    overflow: hidden;
  }

  .section-id-{{ section.id }} .cb__form-container-text {
    display: grid;
    align-content: center;
    padding: 4rem;
  }

  @media (min-width: 1023px){
    .section-id-{{ section.id }} .cb__form-container-text {
      width: 70%;
    }
  }

  .section-id-{{ section.id }} .cb__form-main-container {
    background-color: #1d9ea4;
    display: grid;
    justify-content: center;
    border-radius: 30px;
    align-content: center;
    padding: 10rem 0;
  }

  @media(max-width: 500px) {
    .section-id-{{ section.id }} .cb__container-child {
      grid-template-columns: auto;
      row-gap: 1em;
    }

    .section-id-{{ section.id }} .cb__title-text {
      font-size: 24px;
      margin-bottom: 2em;
    }

    .section-id-{{ section.id }} .cb__form-container-text p {
      font-size: 16px;
    }

    .section-id-{{ section.id }} .cb__form-container-text p > * {
      font-size: 12px;
    }

    .section-id-{{ section.id }} .cb__form-main-container {
      padding: 10rem 2.5rem;
  }

  }
{% endstyle %}

<div class="cb__container section-id-{{ section.id }}">
  <div class="cb__container-child{% if section.settings.background_color != blank %} cb__background-color{% endif %}">
    <div class="cb__form-container-text">
      <h1 class="cb__title-text">{{ section.settings.title }}</h1>
      <p class="cb__subtitle-text">{{ section.settings.subtitle }}</p>
      <p class="cb__paragraph-text">{{ section.settings.paragraph_1 }}</p>
      <p class="cb__paragraph-text">{{ section.settings.paragraph_2 }}</p>
      <p class="cb__paragraph-text">{{ section.settings.paragraph_3 }}</p>
    </div>

    <div class="cb__form-main-container">
      <div class="cb__form-form-container">
        {{ section.settings.form }}
      </div>
    </div>
  </div>
</div>

